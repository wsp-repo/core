{
  "name": "@zalib/core",
  "version": "1.0.7",
  "description": "Core package",
  "author": "https://github.com/wsp-repo/",
  "license": "UNLICENSED",
  "keywords": [
    "utils",
    "helpers"
  ],
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/wsp-repo/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsp-repo/core.git"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.{ts,js}' --quiet",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --quiet --fix",
    "lint:warns": "eslint 'src/**/*.ts' --max-warnings 0",
    "prebuild": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "test": "jest --config ./jest.unit.js"
  },
  "devDependencies": {
    "@jest-performance-reporter/core": "2.1.3",
    "@types/jest": "29.5.12",
    "@zalib/linter": "1.1.1",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.7",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "package.json": "check-exact-package",
    "*.{js,ts}": [
      "eslint --quiet --max-warnings 0",
      "eslint --quiet --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "prettier": "@zalib/linter/prettier"
}
